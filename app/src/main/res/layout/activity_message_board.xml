<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8D6D6"
    tools:context=".messageboard.MessageBoardActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/message_board_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout
        android:id="@+id/message_board_activity_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/message_board_activity_toolbar"
        android:background="#FFF">
        <TextView
            android:id="@+id/message_board_activity_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="详情描述（必填，200字以内）"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/message_board_activity_edittext1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/message_board_activity_textview1"
            android:layout_margin="10dp"
            android:inputType="textMultiLine"
            android:gravity="left|top"
            android:hint="请输入详情描述"/>


    </RelativeLayout>

    <Button
        android:id="@+id/message_board_activity_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/message_board_activity_relativelayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/sale_ticket_activity_button_shape"
        android:text="提交"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="20sp" />

    <Button
        android:id="@+id/message_board_activity_button2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/message_board_activity_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_shape_green"
        android:text="我的留言"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="20sp" />


</RelativeLayout>