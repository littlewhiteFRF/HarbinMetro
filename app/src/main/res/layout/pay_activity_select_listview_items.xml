<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/pay_activity_pay_listview_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/pay_activity_pay_listview_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/pay_activity_pay_listview_imageview"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawableRight="@drawable/ic_action_right" />


</RelativeLayout>