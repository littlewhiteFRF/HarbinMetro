<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchmoney.SearchMoneyActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/search_money_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ImageView
        android:id="@+id/search_money_activity_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/search_money_activity_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:background="@mipmap/ic_action_rmb"/>

    <TextView
        android:id="@+id/search_money_activity_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_money_activity_imageview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="我的余额"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/search_money_activity_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_money_activity_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="#000"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/search_money_activity_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/search_money_activity_money"
        android:layout_marginTop="40dp"
        android:text="充值"
        android:background="@drawable/sale_ticket_activity_button_shape"/>


</RelativeLayout>