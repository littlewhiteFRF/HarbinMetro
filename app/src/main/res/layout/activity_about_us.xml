<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_register"
    tools:context=".aboutus.AboutUsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/about_us_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/about_us_activity_imageview"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/about_us_activity_toolbar" />

    <TextView
        android:id="@+id/about_us_activity_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/about_us_activity_imageview"
        android:text="哈尔滨地铁"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/about_us_activity_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:layout_below="@id/about_us_activity_textview1"
        android:text="Harbin Metro"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:textStyle="bold"/>

    <android.support.v7.widget.CardView
        android:id="@+id/about_us_activity_cardview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@id/about_us_activity_textview2"
        android:background="#EBFFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/about_us_activity_textview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="    “哈尔滨地铁”由方荣福、梁绍希、相涛与齐琦共同设计完成，该APP旨在为生活在哈尔滨的人们提供更加方便的出行体验。"
                android:textStyle="normal"
                android:textColor="#000"
                android:textSize="15sp"/>

            <View
                android:id="@+id/about_us_activity_dash_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/about_us_activity_textview3"
                android:layout_marginTop="2dp"
                android:background="@drawable/dash_line"
                android:layerType="software" />

            <TextView
                android:id="@+id/about_us_activity_textview4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:layout_below="@id/about_us_activity_dash_line"
                android:text="    邮箱：1120802408@qq.com"
                android:textStyle="normal"
                android:textColor="#000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/about_us_activity_textview5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:layout_below="@id/about_us_activity_textview4"
                android:text="    联系方式：18846074770"
                android:textStyle="normal"
                android:textColor="#000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/about_us_activity_textview6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:layout_below="@id/about_us_activity_textview5"
                android:text="    联系地址：黑龙江省哈尔滨市南岗区学府路74号（黑龙江大学）软件学院"
                android:textStyle="normal"
                android:textColor="#000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/about_us_activity_textview7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:layout_below="@id/about_us_activity_textview6"
                android:text="    QQ群：464575434"
                android:textStyle="normal"
                android:textColor="#000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/about_us_activity_textview8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:layout_below="@id/about_us_activity_textview7"
                android:text="    微信公众号：fangrongfu2"
                android:textStyle="normal"
                android:textColor="#000"
                android:textSize="15sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/about_us_activity_textview9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@id/about_us_activity_cardview"
        android:text="版本：1.0"
        android:textStyle="normal"
        android:textColor="#000"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/about_us_activity_textview10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_below="@id/about_us_activity_textview9"
        android:text="©2019 版权所有：黑龙江大学软件学院"
        android:textStyle="normal"
        android:textSize="10sp"/>

</RelativeLayout>