<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E2E2"
    tools:context=".addmoney.AddMoneyActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_money_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <android.support.v7.widget.CardView
        android:id="@+id/add_money_activity_cardview1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/add_money_activity_toolbar"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/add_money_activity_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:text="请选择充值金额"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <View
                android:id="@+id/add_money_ticket_activity_dash_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/add_money_activity_textview1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/dash_line"
                android:layerType="software" />

            <RelativeLayout
                android:id="@+id/add_money_activity_relativelayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_money_ticket_activity_dash_line"
                android:layout_centerHorizontal="true">
                <android.support.v7.widget.CardView
                    android:id="@+id/add_money_activity_money5"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="5元"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/add_money_activity_money10"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@id/add_money_activity_money5"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="10元"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/add_money_activity_money20"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@id/add_money_activity_money10"
                    android:layout_margin="5dp">
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="20元"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/add_money_activity_relativelayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_money_activity_relativelayout1"
                android:layout_centerHorizontal="true">
                <android.support.v7.widget.CardView
                    android:id="@+id/add_money_activity_money30"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="30元"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/add_money_activity_money50"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@id/add_money_activity_money30"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="50元"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/add_money_activity_money100"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@id/add_money_activity_money50"
                    android:layout_margin="5dp">
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="100元"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/add_money_activity_cardview2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/add_money_activity_cardview1"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/add_money_activity_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:text="充值金额："
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/add_money_activity_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:layout_toRightOf="@id/add_money_activity_textview2"
                android:text="¥0.00"
                android:textSize="20sp"
                android:textColor="#E40606"
                android:textStyle="bold"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/add_money_activity_textview3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/add_money_activity_cardview2"
        android:background="#FFF"
        android:text="请选择支付方式："
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/add_money_activity_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_money_activity_textview3"
        android:background="#FFF">

    </ListView>

</RelativeLayout>